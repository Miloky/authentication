@model ChangePasswordModel
<form asp-controller="Profile" asp-action="ChangePassword">
    <div class="form-group">
        <label>Username</label>
        <input type="text" class="form-control" value="@User.Identity.Name" disabled>
    </div>
    <div class="form-group">
        <label>Old Password</label>
        <input type="text" class="form-control" asp-for="OldPassword" />
    </div>
    <div class="form-group">
        <label>New Password</label>
        <input type="text" class="form-control" asp-for="NewPassword" />
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input type="text" class="form-control" asp-for="ConfirmPassword" />
    </div>

    <input type="Submit" class="btn btn-primary" />
</form>